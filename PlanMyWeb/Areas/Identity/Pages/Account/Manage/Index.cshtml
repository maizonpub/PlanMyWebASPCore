@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}
<style>
    html body {
        background-color: #faf9f5;
        font-family: Istok Web !important;
        font-weight: 400,400italic,700,700italic;
    }

    h1 {
        color: #333 !important;
    }
    h2 {
        color: #333 !important;
        text-align:center !important;
    }
</style>
<div class="tp-breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <ol class="breadcrumb listnone">
                    <li>
                        <!-- Breadcrumb NavXT 6.2.1 -->
                        <span property="itemListElement" typeof="ListItem"><a property="item" typeof="WebPage" title="Go to Plan My." href="~/" class="home"><span property="name">Plan My</span></a><meta property="position" content="1"></span> &gt; <span class="post post-page current-item">@ViewData["Title"]</span>
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div id="post-864" class="post-864 page type-page status-publish hentry">
                    <input type="hidden" id="security" name="security" value="ad08bed105"><input type="hidden" name="_wp_http_referer" value="/Login/"><input type="hidden" id="security-forgot" name="security-forgot" value="f6d0efe0f2"><input type="hidden" name="_wp_http_referer" value="/login/"><h1 style="text-align: center;">Welcome</h1>
                    <p style="text-align: center;">We’re happy to have you back. </p><div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <div class="login-boxes">
                                <div class="well-box">
                                    <div class="vendor-login" id="home">
                                        <h2>My Profile</h2>

                                        @Html.Partial("_StatusMessage", Model.StatusMessage)

                                        <form id="profile-form" method="post" enctype="multipart/form-data">
                                            <div asp-validation-summary="All" class="text-danger"></div>
                                            <div class="form-group">
                                                <label asp-for="Username"></label>
                                                <input asp-for="Username" class="form-control" disabled />
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Input.Email"></label>
                                                @if (Model.IsEmailConfirmed)
                                                {
                                                    <div class="input-group">
                                                        <input asp-for="Input.Email" class="form-control" />
                                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <input asp-for="Input.Email" class="form-control" />
                                                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                                                }
                                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Input.PhoneNumber"></label>
                                                <input asp-for="Input.PhoneNumber" class="form-control" />
                                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Input.UserImage"></label>
                                                <input asp-for="Input.UserImage" class="form-control" />
                                                <span asp-validation-for="Input.UserImage" class="text-danger"></span>
                                                @if (ViewData["pimg"] != null)
                                                {
                                                    <img src="@ViewData["pimg"]" style="width:100%" />
                                                }
                                            </div>
                                            <h2>My Event</h2>
                                            <div class="form-group">
                                                <label asp-for="Input.EventTitle"></label>
                                                <input asp-for="Input.EventTitle" class="form-control" />
                                                <span asp-validation-for="Input.EventTitle" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Input.EventDescription"></label>
                                                <textarea asp-for="Input.EventDescription" class="form-control"></textarea>
                                                <span asp-validation-for="Input.EventDescription" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Input.EventDate"></label>
                                                <input asp-for="Input.EventDate" class="form-control" />
                                                <span asp-validation-for="Input.EventDate" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Input.EventImage"></label>
                                                <input asp-for="Input.EventImage" class="form-control" />
                                                <span asp-validation-for="Input.EventImage" class="text-danger"></span>
                                                @if (ViewData["img"] != null)
                                                {
                                                    <img src="@ViewData["img"]" style="width:100%" />
                                                }
                                            </div>
                                            <button type="submit" class="btn btn-default">Save</button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div></div>
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
