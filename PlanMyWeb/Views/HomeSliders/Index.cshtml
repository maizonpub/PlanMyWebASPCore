@model IEnumerable<DAL.HomeSlider>

@{
    ViewData["Title"] = "Home";
    ViewData["Description"] = "Home Sliders";
    ViewBag.Active = "HomeSliders";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<div class="col-xs-12">
    <div class="box">
        <div class="box-body">
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Media)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MediaType)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (item.MediaType == DAL.MediaType.Image)
                                {
                                <img src="~/Media/@item.Media" style="height:50px"/>
                                }else
                                {
                                    <video src="~/Media/@item.Media" style="height:100px"/>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MediaType)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>
