@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Mvc.Common
@model IPagedList<DAL.Offers>

@{
    ViewData["Title"] = "Offers";
}

<style>
    html body {
        background-color: #ffffff;
        font-family: Istok Web !important;
        font-weight: 400,400italic,700,700italic;
    }

    a {
        color: #5f5f9e;
        text-decoration: none;
        font-weight: 600;
    }
</style>

<div class="tp-page-head">
    <!-- page header -->
    <div class="container blog-header">
        <!--<div class="row">
          <div class="col-md-12">
            <div class="page-header">
              <h1>Vendors</h1>
            </div>
          </div>
        </div>-->
    </div>
</div>
<!-- ./ page header -->

<div class="tp-breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <ol class="breadcrumb listnone">
                    <li>
                        <!-- Breadcrumb NavXT 6.2.1 -->
                        <span property="itemListElement" typeof="ListItem"><a property="item" typeof="WebPage" title="Go to Plan My." href="~/" class="home"><span property="name">Plan My</span></a><meta property="position" content="1"></span> &gt; <span class="post post-page current-item">Offers</span>
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="main-container">
    <!--main-container-->
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="left-sidebar">
                    <div class="filter-box collapse in" id="searchform">
                        <div class="row filter-form">

                            <form method="get">
                               
                                <input type="hidden" id="list_style" value="oscar" />
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label" for="category_type">Category</label>
                                        <select name="category_type" id="category_type" class="form-control input-md" onchange="window.location.href='/offers?CategoryId='+this.value"><option value="">Select Category</option><option value="245">3D Mapping</option><option value="238">Banks</option><option value="247">Beauty Centers</option><option value="248">Cars & Transportation</option><option value="44">Catering & Bars</option><option value="46">Clothing & Accessories</option><option value="59">Entertainment</option><option value="9">Florists</option><option value="60">Furniture</option><option value="43">Hair & Beauty</option><option value="54">Honeymoon Experience</option><option value="156">Hostessing</option><option value="49">Invitations</option><option value="246">Jewelry</option><option value="51">Lighting & Sound</option><option value="241">Miscellaneous</option><option value="4">Photography & Videography</option><option value="52">Planners & coordinators</option><option value="3">Venues</option></select>
                                    </div>
                                </div>
                                
                                <div class="col-md-12">
                                    <button type="button" id="leftsidebar-search" class="btn tp-btn-default tp-btn-lg btn-block">Search</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-8 content-left">
                <div class="row">
                    <div class="col-md-12">
                        <div id="item_results">
                            <div class="row">
                                <div class="col-md-12 vendor-listing">
                                    <h2 style="color:#000000;">Total @Model.Count() items in your search</h2>
                                </div>
                                @foreach (var row in Model)
                                {
                                    <div class="col-md-4 vendor-box">
                                        <div class="grid">

                                            <figure class="effect-oscar">
                                                <img width="440" height="290" src="~/Media/@row.Image" class="img-responsive wp-post-image" alt="" />

                                                <figcaption>
                                                    <h2><a href="/offers/details/@row.Id">@row.Title</a></h2>
                                                    <p></p>
                                                </figcaption>
                                            </figure>
                                            
                                        </div>
                                    </div>
                                }

                            </div>







                        </div>
                    </div>
                    <div class="col-md-12">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>